<h1 class="text-center mb-4">My Blogs</h1>

<div class="row blog-row text-center">

{{#each blogs}}
    <div class="col-sm-4">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{title}}</h4>
                <hr>
                <p class="card-text">{{details}}</p>
            </div>
        </div>

    </div>

{{else}}
<p>No Blogs to See</p>
{{/each}}  

</div>

<a href="/blogs/feed" class="btn btn-primary mb-20">View Posts From People You Follow</a>